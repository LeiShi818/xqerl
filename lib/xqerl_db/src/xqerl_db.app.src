{application, xqerl_db,
 [
  {description, "XML Database for xqerl XQuery processor"},
  {vsn, "0.1.0"},
  {applications, [
                  kernel,
                  stdlib,
                  mnesia
                 ]},
  {mod, { xqldb_app, []}},
  {env, [
      {max_index_text_length,    255},
      {max_index_distinct_value, 255},
      {data_import_dir, "data/import"},
      {data_export_dir, "data/export"}
   ]}
 ]}.
