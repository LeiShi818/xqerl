{minimum_otp_vsn, "20.0"}.

{erl_opts, [
  debug_info
]}.

{deps,[
 {xqerl_db,{git, "https://github.com/zadean/xqerl_db.git"}}
]}.

{relx, [
   {release, { xqerl, "0.0.1" },
      [xqerl]
   },

   {dev_mode, true},
   {include_erts, false},

   {extended_start_script, true}
]}.


{profiles, [
   {native, [
      {erl_opts, [{native, o3}]}
   ]}
]}.

{xref_ignores, [{xqerl_main, main}]}.
